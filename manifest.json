{
  "manifest_version": 3,
  "name": "Social Media Spacer",
  "version": "1.0",
  "description": "Adds vertical space between posts on social medias.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://instagram.com/*"
      ],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ]
}
